---
import { getLangFromUrl, useTranslations, DEFAULT_LOCALE } from "@/i18n/utils";
import { getLocalePrefix } from "@/i18n/config";
import LanguageSwitcher from "./LanguageSwitcher.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const homeUrl = lang === DEFAULT_LOCALE ? "/" : `${getLocalePrefix(lang)}/`;
---

<nav
  class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md border-b border-white/5"
>
  <div
    class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8 h-16 flex items-center justify-between"
  >
    <!-- Back Button -->
    <a
      href={homeUrl}
      class="group flex items-center gap-2 px-4 py-2 text-sm font-semibold text-white/70 hover:text-white transition-colors"
    >
      <svg
        class="w-4 h-4 transition-transform group-hover:-translate-x-1"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 19l-7-7 7-7"></path>
      </svg>
      <span>{t("nav.backToHome")}</span>
    </a>

    <!-- Right side buttons -->
    <div class="flex items-center gap-3">
      <!-- Language Switcher -->
      <LanguageSwitcher currentLang={lang} />

      <!-- Search Another User Button -->
      <button
        id="navOpenModalBtn"
        class="group flex items-center gap-2 px-5 py-2 text-sm font-bold text-white rounded-full transition-all duration-300 hover:scale-[1.02] bg-gradient-to-r from-red-500/80 to-red-600/80 hover:from-red-500 hover:to-red-600 shadow-md shadow-red-500/20 hover:shadow-lg hover:shadow-red-500/30"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span>{t("nav.searchAnotherUser")}</span>
      </button>
    </div>
  </div>
</nav>

<script>
  const navOpenModalBtn = document.getElementById("navOpenModalBtn");

  navOpenModalBtn?.addEventListener("click", () => {
    const event = new CustomEvent("openUsernameModal");
    window.dispatchEvent(event);
  });
</script>
